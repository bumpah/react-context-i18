{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "jsx": "react",
    "importHelpers": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "lib/",
    "pretty": true,
    "removeComments": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "target": "es6",
    "emitDeclarationOnly": true
  },
  "include": [
    "src"
  ]
}