{
  "name": "react-context-i18n",
  "version": "0.0.4",
  "description": "Translate your React APP with with use of new Context API ^^",
  "main": "lib/index.js",
  "author": "bumpah",
  "license": "MIT",
  "peerDependencies": {
    "react": "^16.3.0"
  },
  "keywords": [
    "gettext",
    "i18n",
    "internationalization",
    "react",
    "react context",
    "react context api",
    "react native",
    "reactjs",
    "translation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bumpah/react-context-i18n"
  },
  "bugs": {
    "url": "https://github.com/bumpah/react-context-i18n/issues"
  },
  "resolution": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.46",
    "@babel/core": "^7.0.0-beta.46",
    "@babel/plugin-proposal-export-default-from": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-react": "^7.0.0-beta.46",
    "@babel/preset-stage-3": "^7.0.0-beta.46",
    "@babel/preset-typescript": "^7.0.0-beta.46",
    "@storybook/addon-actions": "^4.0.0-alpha.3",
    "@storybook/addon-links": "^4.0.0-alpha.3",
    "@storybook/addons": "^4.0.0-alpha.3",
    "@storybook/react": "^4.0.0-alpha.3",
    "@types/jest": "^22.2.3",
    "@types/react": "^16.3.12",
    "@types/react-dom": "^16.0.5",
    "@types/react-test-renderer": "^16.0.1",
    "@types/storybook__react": "^3.0.7",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^22.4.3",
    "coveralls": "^3.0.0",
    "jest": "^22.4.3",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-test-renderer": "^16.3.2",
    "tslib": "^1.9.0",
    "tslint": "^5.9.1",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.3"
  },
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit --pretty",
    "lint": "tslint -c tslint.json --project tsconfig.json",
    "clean": "rm -rf ./lib",
    "build": "babel src --out-dir lib --source-map --extensions '.ts,.tsx'",
    "watch": "babel src/index.ts -o lib/index.js -w --extensions '.ts,.tsx'",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "prepublish": "yarn clean && yarn lint && yarn test && yarn build"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "transform": {
      ".(ts|tsx)": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "modulePaths": [
      "<rootDir>/node_modules",
      "<rootDir>/src"
    ],
    "testRegex": "/__tests__/.*\\.(js|jsx|ts|tsx)$",
    "collectCoverageFrom": [
      "src/*.tsx"
    ]
  }
}
